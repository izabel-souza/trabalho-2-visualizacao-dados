{
  "data": {
    "url": "dados/data_results.json"
  },
  "transform": [
    {
      "calculate": "datum.home_score > datum.away_score ? datum.home_team : (datum.away_score > datum.home_score ? datum.away_team : null)",
      "as": "winner"
    },
    {
      "filter": "datum.winner != null"
    },
    {
      "aggregate": [{"op": "count", "as": "victories"}],
      "groupby": ["winner"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "winner",
      "type": "nominal",
      "title": "País",
      "sort": "-y",
      "axis": {"labelAngle": -45}
    },
    "y": {
      "field": "victories",
      "type": "quantitative",
      "title": "Número de Vitórias"
    },
    "color": {
      "field": "winner",
      "type": "nominal",
      "legend": null
    }
  },
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  }
}