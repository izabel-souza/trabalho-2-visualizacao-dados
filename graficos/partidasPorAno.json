{
    "data": {
      "url": "dados/data_results.json"
    },
    "transform": [
      {
        "calculate": "year(datum.date)",
        "as": "year"
      },
      {
        "aggregate": [{"op": "count", "as": "matches"}],
        "groupby": ["year"]
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "year",
        "type": "ordinal",
        "title": "Ano",
        "axis": {"labelAngle": -45}
      },
      "y": {
        "field": "matches",
        "type": "quantitative",
        "title": "NÃºmero de Partidas"
      }
    }
}